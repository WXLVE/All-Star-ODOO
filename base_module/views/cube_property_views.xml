<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="cube_listView_tree" model="ir.ui.view">
        <field name="name">cube.tree</field>
        <field name="model">cube.model</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability"/>
            </tree>
        </field>
    </record>

    <record id="cube_action" model="ir.actions.act_window">
        <field name="name">Cube Action</field>
        <field name="res_model">cube.model</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a cube advertisement
            </p>
            <p>
                Create cube properties and follow the selling process.
            </p>
        </field>
    </record>

</odoo>


