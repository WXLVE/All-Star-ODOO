<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="cube_tags" model="ir.actions.act_window">
        <field name="name">Cube types</field>
        <field name="res_model">cube.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a cube tag
            </p>
            <p>
                Create cube properties and follow the selling process.
            </p>
        </field>
    </record>

    <record id="cubetag_view_form" model="ir.ui.view">
        <field name="name">cubetag.form</field>
        <field name="model">cubetag.model</field>
        <field name="arch" type="xml">
            <form string="Cube">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="name"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cube_tags_action" model="ir.actions.act_window">
        <field name="name">Cube Tags</field>
        <field name="res_model">cubetag.model</field>
        <field name="view_mode">tree,form</field>

    </record>

</odoo>