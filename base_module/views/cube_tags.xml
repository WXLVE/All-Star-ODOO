<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="cubetag_view_tree" model="ir.ui.view">
        <field name="name">Cube Tag tree</field>
        <field name="model">cubetag.model</field>
        <field name="arch" type="xml">
            <tree string="Property Tags" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="cubetag_view_form" model="ir.ui.view">
        <field name="name">cubetag.form</field>
        <field name="model">cubetag.model</field>
        <field name="arch" type="xml">
            <form string="Cube">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="name"/>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cube_tags_action" model="ir.actions.act_window">
        <field name="name">Cube Tags</field>
        <field name="res_model">cubetag.model</field>
        <field name="view_mode">tree,form</field>

    </record>

</odoo>