<?xml version="1.0" encoding="utf-8"?>

<odoo>

<record id="cube_settings" model="ir.actions.act_window">
    <field name="name">Cube types</field>
    <field name="res_model">cube.type</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a cube type
        </p>
        <p>
            Create cube properties and follow the selling process.
        </p>
    </field>
</record>

<record id="cubetype_view_tree" model="ir.ui.view">
    <field name="name">Cubetype.tree</field>
    <field name="model">cubetype.model</field>
    <field name="arch" type="xml">
        <tree string="Channel"> 
        <!-- ^^editable="bottom"^^ -->
            <field name="sequence" widget="handle"/>
            <field name="name"/>
            <field name="description"/>

        </tree>
    </field>
</record>

<record id="cube_types_action" model="ir.actions.act_window">
    <field name="name">Cube Types</field>
    <field name="res_model">cubetype.model</field>
    <field name="view_mode">tree,form</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create a cube type
        </p>
    </field>
</record>

</odoo>