        <field name="bundle">web.assets_frontend</field>
        <field name="path">base_module/static/src/snippets/s_sliding_carousel/carousel.css</field>
        <field name="active" eval="False"/>
    </record>

    <record id="base_module.s_sliding_carousel_000_js" model="ir.asset">
        <field name="name">Sliding Carousel 000 JS</field>
